<nav class="header__inline-menu" aria-label="Header menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li class="list-menu__item{% if link.links != blank %} list-menu__item--has-mega{% endif %}{% if link.current %} is-active{% endif %}">
        <a
          id="HeaderMenu-{{ link.handle }}"
          href="{{ link.url }}"
          class="list-menu__link link link--text focus-inset"
          {% if link.current %}
            aria-current="page"
          {% endif %}
          aria-haspopup="{% if link.links != blank %}true{% else %}false{% endif %}"
        >
          {{ link.title | escape }}
        </a>

        {%- if link.links != blank -%}
          {% render 'mega-menu', link: link, image_size: section.settings.mega_menu_image_size %}
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
